<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /><!--000000-->
            <corners
                android:topLeftRadius="30dp" android:topRightRadius="30dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>

            <padding android:bottom="0px" android:top="0px" android:left="0px" android:right="0px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /><!--13000000-->
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <padding android:bottom="0px" android:top="0px" android:left="0px" android:right="0px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /><!--07000000-->
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <padding android:bottom="0px" android:top="0px" android:left="0px" android:right="0px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <gradient
                android:angle="90"
                android:startColor="#d7d4d4"
                android:endColor="#ED41C907"
                android:centerColor="#fff"
                android:centerX="0.9"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
