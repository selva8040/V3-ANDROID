<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="#FFFFFF">
                </solid>

                <corners android:radius="0.5dp" />

                <padding
                    android:bottom="2dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="2dp" />
                <stroke
                    android:width="1dp"
                    android:color="#50000000"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="right|center_vertical"
                android:src="@mipmap/downarrow"  />
        </item>
    </layer-list></item>
</selector>