<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center"
    tools:context="com.elancier.healthzone.BankDetails">

    <!-- <LinearLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Bank_Name"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/bank_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/grey_bg1"
                            android:enabled="false"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:textColor="#555"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/Branch_Name"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/branch_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/grey_bg1"
                            android:enabled="false"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:textColor="#555"
                            android:textSize="14sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/Account_Number"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/acc_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/grey_bg1"
                            android:enabled="false"
                            android:inputType="number"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:textColor="#555"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/Account_Type"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <Spinner
                                android:id="@+id/acc_type_spin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/grey_bg1"
                                android:enabled="false"
                                android:padding="2dp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="10dp"
                                android:padding="4dp"
                                android:src="@mipmap/down_arrow"
                                android:visibility="gone" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/acc_type_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Please select account type"
                            android:textColor="#FF00"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <!--<LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/acc_type_spin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/grey_stroke_bg"
                                    android:padding="1dp" />


                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/grey_stroke_bg"
                                    android:padding="7dp"
                                    android:textColor="#555"
                                    android:textSize="14sp" />

                            </LinearLayout>-->


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/IFSC"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/ifsc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/grey_bg1"
                            android:enabled="false"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:textColor="#555"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/Pan_No"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/micr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/grey_bg1"
                            android:enabled="false"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:textColor="#555"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearLayout10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toStartOf="@+id/linearLayout11"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/textView65"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="PAN Image"
                                android:textColor="@color/blue"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/panimg"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"


                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/textView73"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:lineSpacingExtra="4dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/imageView26"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                tools:srcCompat="@mipmap/verify" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/linearLayout10"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/textView65s"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Passbook Image"
                                android:textColor="@color/blue"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/bankimg"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"

                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/textView77"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:lineSpacingExtra="4dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/imageView27"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                tools:srcCompat="@mipmap/notverified" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <CheckBox
                        android:id="@+id/check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:padding="16dp"
                        android:text="I accept all the terms and conditions."
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/theme_solid_back"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/Submit"

                        android:textColor="#FFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/diff_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:orientation="vertical">


        </LinearLayout>

    </FrameLayout>

    <!-- <LinearLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"

            android:layout_gravity="start">

            <include layout="@layout/drawer_layout" />

        </LinearLayout>-->

</LinearLayout>

