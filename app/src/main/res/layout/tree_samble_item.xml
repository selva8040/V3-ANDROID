                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:singleLine="true"
                                    android:text="RCount : 6"
                                    android:textColor="#f3f3f3"
                                    android:textSize="14dp"
