<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elancier.healthzone.BinaryTreeActivity"
    tools:showIn="@layout/activity_binary_tree">

    <LinearLayout
        android:id="@+id/searchlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"

            >

            <EditText
                android:id="@+id/searchtxt"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@drawable/grey_stroke_bg"
                android:paddingLeft="16dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="1dp"
                android:background="#eeeeee"
                android:paddingBottom="9dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="9dp"
                android:src="@mipmap/grey_search" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_shadow" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <LinearLayout
                        android:id="@+id/firstlay"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tree_round_corner_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/firstname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Manikandan G"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/firstlcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="LCount : 4"
                            android:textColor="#f3f3f3"
                            android:textSize="14dp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/firstrcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="RCount : 6"
                            android:textColor="#f3f3f3"
                            android:textSize="14dp"
                            android:textStyle="italic" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/user_icon" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/firstflow"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/branch"
                        android:visibility="visible" />

                    <FrameLayout
                        android:id="@+id/firstline"
                        android:layout_width="550dp"
                        android:layout_height="wrap_content">

                        <FrameLayout
