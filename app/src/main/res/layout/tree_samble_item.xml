                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/fourthemplay"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="40dp"
                                        android:background="@drawable/tree_round_corner_bg"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:visibility="gone">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/white_user" />
                                    </LinearLayout>
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right">

                                    <LinearLayout
                                        android:id="@+id/fifthlay"
                                        android:layout_width="160dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/tree_round_corner_bg"
                                        android:gravity="center_horizontal"

                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:visibility="visible">

                                        <TextView
                                            android:id="@+id/fifthname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="Manikandan G"
                                            android:textColor="#ffffff"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/fifthlcount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:singleLine="true"
                                            android:text="LCount : 4"
                                            android:textColor="#f3f3f3"
                                            android:textSize="14dp"
                                            android:textStyle="italic" />

                                        <TextView
                                            android:id="@+id/fifthrcount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:singleLine="true"
                                            android:text="RCount : 6"
                                            android:textColor="#f3f3f3"
                                            android:textSize="14dp"
                                            android:textStyle="italic" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
