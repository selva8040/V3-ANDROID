                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/fifthemplay"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="50dp"
                                        android:background="@drawable/tree_round_corner_bg"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:visibility="gone">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/white_user" />
                                    </LinearLayout>
                                </FrameLayout>

                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/secondrightline"
                            android:layout_width="400dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/secondrightflow"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/branch" />

                            <FrameLayout
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"

                                >

                                <FrameLayout
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left">

                                    <LinearLayout
                                        android:id="@+id/sixthlay"
                                        android:layout_width="160dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/tree_round_corner_bg"
                                        android:gravity="center_horizontal"

                                        android:orientation="vertical"
                                        android:padding="15dp"
                                        android:visibility="visible">

                                        <TextView
                                            android:id="@+id/sixthname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="Manikandan G"
                                            android:textColor="#ffffff"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/sixthlcount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:singleLine="true"
                                            android:text="LCount : 4"
                                            android:textColor="#f3f3f3"
                                            android:textSize="14dp"
