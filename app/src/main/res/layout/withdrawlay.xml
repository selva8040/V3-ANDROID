<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center|center_vertical"
            android:gravity="center|center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Amount is"
                android:textSize="18dp"
                android:textColor="#666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.00"
                android:id="@+id/amt"
                android:paddingTop="16dp"
                android:textSize="28dp"

                android:textColor="@color/red"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:padding="16dp"
                android:textColor="#666666"
                android:textSize="14dp"
                android:id="@+id/alert"
                android:visibility="gone"
                android:text="Now you can't get your amount.Because minimum withdrawable amount is Rs.500"/>
            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/grey_stroke_bg"
                android:padding="7dp"
                android:inputType="number"
                android:textColorHint="#454545"
                android:gravity="center|center_vertical"
                android:maxLength="6"
                android:hint="Enter withdraw amount"
                android:singleLine="true"
                android:textColor="#454545"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/otplay">
            <EditText
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/grey_stroke_bg"
                android:padding="7dp"
                android:inputType="textCapCharacters"
                android:textColorHint="#454545"
                android:gravity="center|center_vertical"
                android:maxLength="6"
                android:hint="Enter OTP"
                android:singleLine="true"
                android:textColor="#454545"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You didn't receive verification code please click resend?"
                android:textColor="#666666"
                android:id="@+id/resend"
                android:gravity="center_horizontal"
                android:textSize="14dp"
                android:lineSpacingExtra="5dp"
                android:padding="12dp"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/theme_solid_back"
                android:gravity="center"
                android:padding="13dp"
                android:text="Send OTP"
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>