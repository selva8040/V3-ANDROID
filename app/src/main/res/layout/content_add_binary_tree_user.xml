<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elancier.healthzone.AddBinaryTreeUser"
    tools:showIn="@layout/activity_add_binary_tree_user"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/SponsorId"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/sponsorid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_stroke_bg"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Sponsorname"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"
                            android:padding="5dp"/>



                        <EditText
                            android:id="@+id/sponsorname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_bg1"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:enabled="false"
                            android:textColor="#555"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/Upline"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/upline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bg1"
                    android:enabled="false"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/Position"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bg1"
                    android:enabled="false"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/Username"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_stroke_bg"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/Name1"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bg1"
                    android:enabled="false"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/Pinno"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/pinno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_stroke_bg"
                    android:padding="8dp"
                   android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pinlay"
                    android:visibility="gone"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/Storename"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/storename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bg1"
                    android:enabled="false"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="@string/Pintype"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/pintype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bg1"
                    android:enabled="false"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/theme_solid_back"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="@string/Submit"
                    android:textColor="#FFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
