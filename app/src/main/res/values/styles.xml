<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/new_sts</item>
        <item name="colorPrimaryDark">@color/new_sts</item>
        <item name="colorAccent">@color/new_sts</item>

    </style>

    <style name="AppTheme.NoActionBars">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/new_sts</item>
        <item name="colorPrimaryDark">@color/new_sts</item>
        <item name="colorAccent">@color/new_sts</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="NoTitleDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->

    </style>
    <style name="Theme.MyCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/winBackground</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/background</item>
        <item name="background">@color/background</item>
    </style>
    <color name="winBackground">#ffffff</color>
    <color name="background">#111F3A</color>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/new_sts</item>
    </style>


        <style name="AppTheme.NoActionBar1">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
            <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
            <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        </style>



    <style name="AppThemes.NoActionBar" parent="@android:style/Theme.Holo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorHint">@color/normal</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/normal</item>
        <item name="colorControlNormal">@color/normal</item>
        <item name="colorControlActivated">@color/theme1</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/normal</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/normal</item>
        <item name="colorControlNormal">@color/normal</item>
        <item name="colorControlActivated">@color/theme1</item>
    </style>


</resources>
